<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="alien1" class="com.learning.Alien">
        <property name="age" value="25"/>
        <property name="com" ref="lap1"/>
    </bean>
    <bean id="alien2" class="com.learning.Alien">

        <property name="age" value="30"/>
        <property name="com" ref="desk1"/>

        <!--        <constructor-arg index="1" ref="lap1"/>-->
        <!--        <constructor-arg index="0" value="27"/>-->
    </bean>

    <bean id="lap1" class="com.learning.Laptop"/>
    <bean id="lap2" class="com.learning.Laptop"/>

    <bean id="desk1" class="com.learning.Desktop"/>
</beans>
